" Load our normal Vim configuration.
source ~/.vimrc

" Never show status line.
set laststatus=0

" Enable the ruler.
set ruler

" Manual folding method.
set foldmethod=manual

" Maximum of 99 fold levels.
set foldlevel=99

" Disable lists.
set nolist

